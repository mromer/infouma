<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
      http://java.sun.com/xml/ns/javaee
      http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

	<application>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
		<locale-config>
		</locale-config>
		<resource-bundle>
			<base-name>MessageResources</base-name>
			<var>messages</var>
		</resource-bundle>
	</application>

	<navigation-rule>
		<from-view-id>/schoolList.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>toAdd</from-outcome>
			<to-view-id>/schoolAdd.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>toEdit</from-outcome>
			<to-view-id>/schoolEdit.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>toDelete</from-outcome>
			<to-view-id>/schoolDelete.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/schoolAdd.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>toList</from-outcome>
			<to-view-id>/schoolList.xhtml</to-view-id>
		</navigation-case>		
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/schoolEdit.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>toList</from-outcome>
			<to-view-id>/schoolList.xhtml</to-view-id>
		</navigation-case>		
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/schoolDelete.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>toList</from-outcome>
			<to-view-id>/schoolList.xhtml</to-view-id>
		</navigation-case>		
	</navigation-rule>
</faces-config>
